<template>
  <textarea class="code-area" v-model="code" @input="updateCode" rows="100"/>
</template>

<script>
export default {
  props: {
    modelValue:{
      type: String
    }
  },
  data() {
    return {
      code: this.modelValue
    };
  },
  methods: {
    updateCode() {
      this.$emit('update:modelValue', this.code);
    }
  },
};
</script>

<style scoped>
.code-area {
  flex: 1;
  display: flex;
  padding: 10px;
  width: 100%;
  height: 100%;
  font-size: 1rem;
  margin: 10px;
}
</style>