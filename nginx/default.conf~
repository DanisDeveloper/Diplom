server {
    listen 80;

    root /usr/share/nginx/html;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /api/ {
        proxy_pass http://192.168.206.243:8000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /public/ {
        proxy_pass http://192.168.206.243:8000/public;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
